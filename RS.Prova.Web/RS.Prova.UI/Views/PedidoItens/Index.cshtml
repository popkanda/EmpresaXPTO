@model List<RS.Prova.Domain.Entities.PedidoItens>
<div>
    <a class="btn btn-info" asp-controller="Cliente" asp-action="Index">Voltar</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <h1>Lista de Pedidos - @Model.FirstOrDefault()?.Cliente.Nome (Total: @Model.Count)</h1>
    <div>

        <table class="table table-hover table-striped">

            <thead class="thead-dark">
                <tr>
                    <th>Número do Pedido</th>
                    <th>Produto</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@pedido.Id</td>
                        <td>@pedido.Produto.Descricao</td>
                    </tr>
                }
            </tbody>

        </table>

        <!-- Modal -->
    </div>
}
else
{
<h1>Não há pedidos registrados</h1>
}
